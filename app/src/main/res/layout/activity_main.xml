<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:background="#02E0FF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:text="MoodTune"
            android:textSize="45dp"
            android:textStyle="bold"
            android:textColor="#FF0057"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the name: "
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/playlist_name"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:hint="Name of the Listner"
                android:paddingLeft="30dp"
                android:textAlignment="center"
                android:paddingRight="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your Gender: "
                android:textSize="20dp"
                android:paddingRight="40dp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/Gender"
                android:id="@+id/gender"/>
        </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Select music genres:"
               android:paddingLeft="10dp"
               android:textSize="20dp"
               android:paddingBottom="10dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp">
               <CheckBox
                   android:layout_width="195dp"
                   android:layout_height="wrap_content"
                   android:text="POP" />

               <CheckBox
                   android:layout_width="195dp"
                   android:layout_height="wrap_content"
                   android:text="ROCK" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp">
               <CheckBox
                   android:layout_width="195dp"
                   android:layout_height="wrap_content"
                   android:text="JAZZ" />
               <CheckBox
                   android:layout_width="195dp"
                   android:layout_height="wrap_content"
                   android:text="ELECTRONIC"/>
           </LinearLayout>
       </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your current mood:"
            android:paddingLeft="10dp"
            android:textSize="20dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy"
                android:id="@+id/happy"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sad"
                android:id="@+id/sad"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relaxed"
                android:id="@+id/relaxed"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Energetic"
                android:id="@+id/energetic"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:gravity="center"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">
        <Button
            android:id="@+id/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amarante"
            android:text="Create"
            android:textSize="24dp" />
    </LinearLayout>
</LinearLayout>